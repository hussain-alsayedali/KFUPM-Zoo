<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>KFUPM-Zoo</title>
  

</head>
<body>
  <%- include('partials/header') -%>
    <main class="container">
        <div class="flex flex-col justify-center items-center ">
            <section class="flex flex-col">
                <% if (locals.messages.errors) { %>
                    <% messages.errors.forEach( el => { %>
                        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative"><%= el.msg %></div>
                    <% }) %>    
                <% } %>
                <% if (locals.messages.info) { %>
                    <% messages.info.forEach( el => { %>
                        <div class="bg-red-100 border border-red-300 text-red-800 px-4 py-3 rounded relative"><%= el.msg %></div>
                    <% }) %>    
                <% } %>
                <form action="/signup" method="POST">
                    <div class="flex flex-col">
                        <label for="userName" class="form-label">User Name</label>
                        <input type="text" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"id="confirmPassword"  id="userName" name="userName">
                      </div>
                    <div class="flex flex-col">
                      <label for="exampleInputEmail1" class="form-label">Email address</label>
                      <input type="email" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"id="confirmPassword"  id="exampleInputEmail1" aria-describedby="emailHelp" name="email">
                      <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                    </div>
                    <div class="flex flex-col mt-4">
                      <label for="password" class="form-label">Password</label>
                      <input type="password" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"id="confirmPassword" id="password" name="password">
                    </div>
                    <div class="flex flex-col">
                        <label for="confirmPassword" class="form-label">Confirm Password</label>
                        <input type="password" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"id="confirmPassword" name="confirmPassword">
                      </div>
                    <button type="submit" class="btn btn-main mt-4">Submit</button>
                  </form>
            </section>
        </div>
    </main>


</body>
</html>
